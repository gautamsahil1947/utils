#!/bin/bash

# this script will get a link as first argument and will
# open it in different applications based on what type
# that link is


if [ $# -ne 1 ]
then
        notify-send "Link Handler" "No URL" -i /home/sahil/.config/repos/Pictures/icons/youtube64.png
        exit 1
else
        url=$1
fi

echo $url
notify-send "Link Handler" "Opening in MPV" -i /home/sahil/.config/repos/Pictures/icons/youtube64.png

setsid -f mpv $url > /dev/null 2>&1
