#!/bin/bash

status=$(xrandr -q | grep "^DP-1 connected")

wallpaper="/home/sahil/.config/repos/Pictures/wallpapers/second.jpg"

if [ -z $status ]
then
        # normal laptop display stuff
        xwallpaper --zoom $wallpaper
else
        # dual monitor stuff
        xrandr --output DP-1 --mode 1360x768 --left-of eDP-1 &
        # xrandr --output DP-1 --primary --mode 1360x768 --left-of eDP-1 &
        xwallpaper --output eDP-1 --zoom $wallpaper
        xwallpaper  --output DP-1 --zoom $wallpaper
fi


